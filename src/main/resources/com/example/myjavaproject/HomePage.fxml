<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myjavaproject.HomePage">
   <VBox layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="250.0" spacing="10.0">
      <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="230.0" style="-fx-background-color: #0e60d9;"
              text="Il mio account" textFill="WHITE">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
      <ScrollPane fx:id="gruppiScrollPane" prefHeight="210.0" prefWidth="230.0"
                  style="-fx-background-color: grey; -fx-background-radius: 5;">
         <VBox fx:id="groupVBox" prefHeight="210.0" prefWidth="230.0" spacing="10.0"
               style="-fx-background-color: white;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </VBox>
      </ScrollPane>
      <ScrollPane fx:id="GruppiTrovatiScrollPane" prefHeight="210.0" prefWidth="230.0"
                  style="-fx-background-color: grey; -fx-background-radius: 5;">
         <VBox fx:id="CercaGruppi" prefHeight="210.0" prefWidth="230.0" spacing="10.0"
               style="-fx-background-color: white;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </VBox>
      </ScrollPane>
      <Button fx:id="iscrivitiButton" mnemonicParsing="false" onAction="#iscrivitiAlGruppo" prefHeight="40.0"
              prefWidth="230.0" style="-fx-background-color: #0e60d9;" text="Vuoi iscriverti?" textFill="WHITE"
              visible="false">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
      <TextArea fx:id="AreaNuovoPost" prefHeight="80.0" prefWidth="230.0" promptText="Scrivi un nuovo contenuto..."/>
      <Button fx:id="CreaContButton" mnemonicParsing="false" onAction="#CreaPost" prefHeight="40.0" prefWidth="230.0"
              style="-fx-background-color: #0e60d9;" text="Crea Post" textFill="WHITE">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
   </VBox>
   <VBox layoutX="270.0" layoutY="10.0" prefHeight="580.0" prefWidth="620.0">
      <TextField fx:id="FieldCercaTesto" onAction="#Cercagruppo" prefHeight="40.0" prefWidth="600.0"
                 promptText="Cerca un gruppo tramite nome o tema"/>
      <ScrollPane fx:id="postScrollPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-radius: 5;">
         <VBox fx:id="AreaCont" prefHeight="500.0" prefWidth="600.0" spacing="10.0"
               style="-fx-background-color: white;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </VBox>
      </ScrollPane>
   </VBox>
</AnchorPane>
